{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useExplicitType": "warn",
        "useSortedClasses": "warn",
        "noNextAsyncClientComponent": "error",
        "useMaxParams": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "useHookAtTopLevel": "warn",
        "noConstAssign": "error",
        "noEmptyPattern": "error",
        "noInvalidUseBeforeDeclaration": "error",
        "noUnusedFunctionParameters": "warn",
        "useJsxKeyInIterable": "error"
      },
      "suspicious": {
        "noUnknownAtRules": "off",
        "noEmptyInterface": "warn",
        "noDoubleEquals": "error",
        "noDuplicateElseIf": "error",
        "noDuplicateJsxProps": "error",
        "noDuplicateParameters": "error",
        "noImplicitAnyLet": "error",
        "noIrregularWhitespace": "warn",
        "noSelfCompare": "error",
        "noSuspiciousSemicolonInJsx": "warn",
        "useIsArray": "warn",
        "useIterableCallbackReturn": "error",
        "noDuplicateObjectKeys": "error",
        "noEmptyBlockStatements": "error",
        "noArrayIndexKey": "error",
        "noCommentText": "error",
        "noTsIgnore": "warn"
      },
      "a11y": {
        "noRedundantAlt": "warn"
      },
      "complexity": {
        "noEmptyTypeParameters": "error",
        "noExtraBooleanCast": "info",
        "noUselessCatch": "info",
        "noUselessTernary": "info",
        "noUselessTypeConstraint": "info",
        "noUselessUndefinedInitialization": "info",
        "noUselessFragments": "info"
      },
      "security": {
        "noBlankTarget": "error",
        "noDangerouslySetInnerHtml": "error"
      },
      "style": {
        "useTemplate": "info",
        "useCollapsedElseIf": "info",
        "useCollapsedIf": "info",
        "useDefaultParameterLast": "warn",
        "noCommonJs": "warn",
        "useSelfClosingElements": "error",
        "useConsistentArrayType": "info"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  }
}
